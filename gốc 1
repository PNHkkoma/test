          formGroup.invalid ||
          (!hasChanges && formMode === 'edit') ||
          isDuplicatedCode
        ">
                {{
                formMode === 'create'
                ? ('common.button.insert' | translate)
                : ('common.button.updated' | translate)
                }}
            </pvn-button-common>
        </div>
    </ng-container>
</pvn-dialog-common>
