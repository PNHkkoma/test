                        <!--cái này là để bao bọc quanh, có lẽ dùng là 1 thẻ typescrip common được các anh dịnh nghĩa-->
                        <vts-form-item>
                            <!--cái này là hiển thị label tức tiêu đề, khỏi cần nghĩ-->
                            <vts-form-label>{{ 'category.used' | translate }}</vts-form-label>
                            <!--vts-form-control là 1 cái gì đó thuộc common rồi, kiểm soát phần input của form, nên nếu về swich phải bỏ cái này
                            nếu có lỗi sẽ được hiển thị thông qua hàm getErrorMessages, cụ thể used là biến như thế nào thì ko biết-->
                            <vts-form-control [vtsErrorTip]="getErrorMessages('used')">
                                <!--<vts-select> thành phần dropdown (chọn một giá trị từ danh sách các tùy chọn), hoạt động như một select HTML
                                    [vtsSize]="size": Xác định kích thước của dropdown, giá trị size được định nghĩa trong component TypeScript
                                    formControlName="used": Ràng buộc dropdown với form control used trong FormGroup
                                    (từ đây có vẻ như used là 1 cái formGroup hoặc là 1 thành phần của nó, khi đó mới tạo ràng buộc đc chứ)
                                    name="select1": Tên của trường select
                                    vtsAllowClear="false": Không cho phép người dùng xóa giá trị đã chọn.(cái này là để cho phép điền vào ấy)
                                    vtsPlaceHolder="{{ 'category.choose' | translate }}": Hiển thị văn bản placeholder khi chưa có lựa chọn.
                                    vtsShowSearch: Cho phép người dùng tìm kiếm trong các tùy chọn-->
                                <vts-select [vtsSize]="size" formControlName="used" name="select1" vtsAllowClear="false"
                                    vtsPlaceHolder="{{ 'category.choose' | translate }}" vtsShowSearch>
                                    <!--Một option trong dropdown-->
                                    <vts-option [vtsValue]="1"
                                        vtsLabel="{{ 'category.optionYes' | translate }}"></vts-option>
                                    <!--Một option trong dropdown-->
                                    <vts-option [vtsValue]="0"
                                        vtsLabel="{{ 'category.optionNo' | translate }}"></vts-option>
                                </vts-select>
                            </vts-form-control>
                        </vts-form-item>


                        <!--sau khi được chuyển đổi từ chatgpt-->
                        <vts-form-item>
                            <vts-form-label>{{ 'category.used' | translate }}</vts-form-label>
                            <vts-form-control [vtsErrorTip]="getErrorMessages('used')">
                                <vts-switch [vtsCheckedChildren]="'category.optionYes' | translate"
                                    [vtsUnCheckedChildren]="'category.optionNo' | translate" [vtsSize]="size"
                                    [ngModel]="isUsedChecked" (ngModelChange)="onUsedClick($event)"></vts-switch>
                            </vts-form-control>
                        </vts-form-item>





                        <vts-form-item>
                            <vts-form-label>{{ 'category.used' | translate }}</vts-form-label>
